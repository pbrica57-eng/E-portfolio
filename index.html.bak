<!-- ✅ Script Changement de Langue Fonctionnel -->
<script>
  (function(){
    const root = document.documentElement;
    const enBtn = document.querySelector('[data-lang-switch="en"]');
    const frBtn = document.querySelector('[data-lang-switch="fr"]');

    function setLang(lang){
      if(lang === 'fr'){
        root.classList.remove('lang-en');
        root.classList.add('lang-fr');
        enBtn.setAttribute('aria-pressed', 'false');
        frBtn.setAttribute('aria-pressed', 'true');
      } else {
        root.classList.remove('lang-fr');
        root.classList.add('lang-en');
        enBtn.setAttribute('aria-pressed', 'true');
        frBtn.setAttribute('aria-pressed', 'false');
      }
    }

    enBtn.addEventListener('click', () => setLang('en'));
    frBtn.addEventListener('click', () => setLang('fr'));
  })();
</script>

